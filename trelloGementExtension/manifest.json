{
	"name": "TrelloGement",
	"version": "0.1",
	"icons": {"128": "settings/pictures/icon_128.png"},
	"manifest_version" : 2,
	"description": "GÃ©rez facilement vos demandes de logement",
	"browser_action" :
	{
		"default_popup": "settings/popup.html"
	},
	"content_scripts": [
		{
			"matches": ["https://trello.com/b/*"],
			"js": [
				"node_modules/jquery/dist/jquery.min.js",
				"scripts/main.js"
			],
			"run_at": "document_idle"
		},

		{
			"matches": ["http://www.seloger.com/*"],
			"js": [
				"node_modules/jquery/dist/jquery.min.js",
				"lib/trello-client.js",
				"lib/js/bootstrap.min.js",
				"scripts/extension.js"
			],
			"css": [
				"settings/css/button.css"
			]
		}
	],
	"permissions": [
		"http://www.seloger.com/*",
		"tabs",
		"storage"
	],
	"web_accessible_resources": [
		"settings/index.html",
		"scripts/extension.js",
		"scripts/inject.js",
		"lib/trello-client.js",
		"templates/button-dropdown.html"
	],
	"options_page": "settings/index.html"
}
